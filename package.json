    "@tailwindcss/cli": "^4.0.6",
    "chokidar-cli": "^3.0.0",
    "lighthouse": "^12.3.0",
    "lighthouse-cli": "^0.1.2",
    "live-server": "^1.2.2",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-include": "^2.0.1",
    "tailwindcss": "^4.0.6"
  }
}
